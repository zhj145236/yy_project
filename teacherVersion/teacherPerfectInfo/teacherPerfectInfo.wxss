/* parentsVersion/parentsinstPerfectInfo/parentsinstPerfectInfo.wxss */
page{
  font-size: 30rpx;
  background-color: #f2f2f2;
  font-family:  Microsoft YaHei;
}

/* 顶部 */
.registered{
  width: 90%;
  margin: 30rpx auto;
  padding: 30rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
}
.registered-txt{
  width: 100%;
  color: #74cdce;
  font-weight: 600;
  text-align: center;
}

/* 内容 */
.perfect-info{
  width: 90%;
  margin: 0 auto 30rpx auto;
  background-color: #fff;
  border-radius: 10rpx;
}
.perfect-info-box{
  width: 100%;
  border-bottom:1px solid #e7e7e7;
  padding: 30rpx 0;
}
.perfect-info-box-con{
  width: 90%;
  margin: auto;
  display: flex;
  align-items: center;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:space-between;
}
.perfect-info-box-con-left{
  display: flex;
  align-items: center;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:flex-start;
}
.perfect-info-box-title-box{
  width: 100%;
  border-bottom: 2px solid #e7e7e7;
}
.perfect-info-box-title{
  width: 90%;
  margin: auto;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #74cdce;
}
.perfect-info-box-con-left-img{
  width: 60rpx;
  height: 60rpx;
  background: rgba(78, 185, 255, 0.2);
  border-radius: 100rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
}
.perfect-info-box-con-left-img > image{
  display: block;
  width: 76%;
  height: 76%;
  margin: auto;
}
.perfect-info-box-con-left-inp{
  font-size: 26rpx;
  color: #707070;
}
.perfect-info-box-con-right{
  font-size: 26rpx;
  color: #74cdce;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 0 0 30rpx;
  border-left: 1px solid #74cdce;
  width: 138rpx;
}
.change-inp{
  border-left: none;
}
.submit-registered{
  border: none;
  background: #74cdce;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin:30rpx auto;
  width: 90%;
}
.change-bom{
  border-bottom: none;
}

/* 底部总部信息 */
.platform-info{
  font-size: 24rpx;
  font-weight: 600;
  color: #adadad;
  width:56%;
  margin: 80rpx auto 0 auto;
}
.platform-info > view{
  height: 40rpx;
  line-height: 40rpx;
}

/* 底部占位 */
.position-bottom{
  width: 100%;
  height: 100rpx;
}

