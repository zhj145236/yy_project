/* teacherVersion/teacherProduct/teacherProduct.wxss */
page{
  font-size: 30rpx;
  background-color: #f2f2f2;
  font-family:  Microsoft YaHei;
}
.none-class{
  width: 90%;
  margin: auto;
  font-size: 26rpx;
  color: #a4a4a4;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content:center;
}
.none-class-img{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.none-class-img>image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
/* 顶部 */
.registered{
  width: 90%;
  margin: 30rpx auto;
  padding: 30rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
}
.registered-txt{
  width: 90%;
  margin: 0 auto;
  color: #74cdce;
  font-weight: 600;
  text-align: left;
}

/* 课程内容 */
.collection-content{
  width: 90%;
  margin:0 auto 30rpx auto;
  background: #fff;
  border-radius: 10rpx;
  box-shadow:2px 4px 6px #d2d2d2;
  overflow: hidden;
}
.collection-content-box{
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:flex-start;
  align-items: center;
  height: 350rpx;
  padding: 20rpx;
}
.collection-content-left{
  width: 240rpx;
  height: 100%;
  overflow: hidden;
}
.collection-content-left > image{
  display: block;
  width: 100%;
  height: 100%;
}
.collection-content-right{
  margin-left:30rpx;
  font-size: 26rpx;
  color: #a4a4a4;
}
.collection-content-title{
  font-size: 30rpx;
  font-weight: 600;
  color: #707070;
}
/* .collection-content-start{
  font-weight: 600;
  color: #707070;
} */
.common-style{
  margin-bottom: 20rpx;
}
.collection-content-price{
  color: #cd2a17;
  font-size: 28rpx;
  font-weight: 600;
}
.registered-prompt{
  font-size: 22rpx;
  color: #e19e9e;
  height: 60rpx;
  line-height: 60rpx;
  width: 90%;
  margin: auto;
}
.collection-create-time{
  font-size: 24rpx;
}