/* teacherVersion/teaTags/teaTags.wxss */
page{
  font-size: 30rpx;
  background-color: #f2f2f2;
  font-family:  Microsoft YaHei;
}
/* 清除button按钮样式 */
button{
  position: unset;
  padding: 0;
  margin: 0;
}
button::after{
  content: "";
  width: 0;
  height: 0;
  position:unset;
  border: 0;
}
.helpful-hints {
  color: #e19e9e;
  margin-left: 10rpx;
  font-size: 24rpx;
}
  
.use-public-style{
  width: 90%;
  margin: 30rpx auto;
  border-radius: 10rpx;
  background-color: #fff;
}
.use-tag{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  margin: auto;
}
.use-tag > input{
  height: 80rpx;
  line-height: 80rpx;
  width: 78%;
  color: #707070;
}
.use-tag-btn{
  width: 20%;
  border-left: 1px solid #f4f4f4;
  display: flex;
  justify-content:flex-end;
}
.submit-registered{
  border: none;
  width: 90%;
  background:none;
  font-size: 28rpx;
  font-weight: 600;
  color: #74cdce;
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
}
.use-tag-record{
  width: 90%;
  background-color: #fff;
  margin: auto;
  padding: 20rpx 0;
  border-radius: 10rpx;
}
.use-tag-record-box{
  width: 90%;
  margin: auto;
}
.use-tag-record-box-top{
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
  border-bottom: 1px solid #f4f4f4;
  padding: 20rpx 0;
}
.use-tag-record-box-icon{
  width: 36rpx;
  height: 36rpx;
}
.use-tag-record-box-icon > image{
  width: 100%;
  height: 100%;
  display: block;
}
.use-tag-record-box-title{
  font-size: 28rpx;
  color: #666;
  font-weight: 600;
  margin: 0 20rpx;
}
.use-tag-record-box-num{
  font-size: 26rpx;
  color: #707070;
}
.use-tag-record-box-con{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  margin:20rpx 0 0 0;
  padding: 20rpx 0;
  background-color: #f4f4f4;
}
.use-tag-record-box-con-txt{
  font-size: 28rpx;
  color: #666;
  margin-left: 30rpx;
}
.use-tag-record-box-con-deal{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #74cdce;
  border: 1px solid #74cdce;
  border-radius: 10rpx;
  text-align: center;
  margin-right: 30rpx;
}
.add-tag-no{
  font-size: 28rpx;
  color: #707070;
  font-weight: 600;
  padding: 30rpx 0;
}

/* 评价样式 */
.evaluate-textarea-box{
  border:1px solid #f4f4f4;
  border-radius: 10rpx;
  width:90%;
  margin: auto;
  padding-top: 20rpx;
}
.evaluate-textarea-box-out{
  border-bottom: 1px solid #f4f4f4;
}
.evaluate-textarea{
  width: 90%;
  margin: auto;
  min-height: 200rpx;
}
.evaluate-textarea-box-bom{
  display: flex;
  flex-direction:row;
  justify-content:flex-end;
  align-items:center;
  padding: 20rpx 0;
  width: 90%;
  margin: auto;
}
.evaluate-textarea-box-bom-pro{
  color: #b3b3b3;
  margin-right: 20rpx;
}
.evaluate-textarea-box-bom-sub{
  width: 200rpx;
  background-color: #ee854e;
  border-radius: 10rpx;
}
.submit-change{
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
}
.use-public-style-top{
  padding: 30rpx 0;
}
.evaluate-sample{
  width: 90%;
  background-color: #fff;
  margin: 30rpx auto 0 auto;
  padding: 30rpx 0;
  border-radius: 10rpx;
}
.evaluate-sample-box{
  width: 90%;
  margin: auto;
}
.evaluate-sample-box-title{
  font-size: 28rpx;
  color: #707070;
  padding: 20rpx;
  width: 100%;
  border-bottom: 1px solid #f4f4f4;
}
.evaluate-sample-box-con{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #b3b3b3;
  text-align: justify;
}

/* 底部总部信息 */
.platform-info{
  font-size: 24rpx;
  font-weight: 600;
  color: #adadad;
  width:56%;
  margin: 100rpx auto 0 auto;
}
.platform-info > view{
  height: 40rpx;
  line-height: 40rpx;
}

/* 底部占位 */
.position-bottom{
  width: 100%;
  height: 100rpx;
}