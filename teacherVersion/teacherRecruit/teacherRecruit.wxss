/* teacherVersion/teacherRecruit/teacherRecruit.wxss */
page{
  font-size: 30rpx;
  background-color: #f2f2f2;
  font-family:  Microsoft YaHei;
}
/* 顶部 */
.recruit-info{
  width: 90%;
  margin: 30rpx auto;
  background-color: #fff;
  padding: 30rpx 0;
  border-radius: 10rpx;
  box-shadow: 2px 4px 6px #d2d2d2;
}
.recruit-info-box{
  width: 90%;
  margin: auto;
}
.recruit-info-box-title{
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:space-between;
  align-items:center;
  margin-top: 20rpx;
}
.recruit-info-box-title-left{
  font-size: 30rpx;
  font-weight: 600;
  color: #707070;
}
.recruit-info-box-title-right{
  font-size: 24rpx;
  color: #a4a4a4;
}
.recruit-info-box-price{
  font-size: 26rpx;
  color: #fe9d3d;
  font-weight: 600;
  margin: 20rpx auto;
}
.recruit-info-box-btm,.btm-box{
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:flex-start;
  align-items:center;
}
.btm-box{
  margin-right:40rpx;
}
.btm-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.btm-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
.btm-desc{
  font-size: 26rpx;
  color: #707070;
}

/* 机构信息 */
.institution-info{
  width: 90%;
  margin: auto;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx 0;
}
.institution-info-box{
  width: 90%;
  margin: auto;
}
.institution-info-box-title{
  font-weight: 600;
  color: #707070;
}
.institution-info-box-name{
  font-size: 26rpx;
  color: #707070;
}
.institution-info-box-center,.institution-info-box-welfare{
  font-size: 26rpx;
  color: #a4a4a4;
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:flex-start;
  align-items:center;
}
.institution-info-box-center{
  margin: 20rpx 0;
}
.institution-info-box-desc{
  margin-right: 30rpx;
}
.institution-info-box-welfare-desc{
  background-color: #f7f7f7;
  padding: 10rpx;
  margin-right: 10rpx;
}
.institution-info-box-name{
  margin-top: 20rpx;
}
.position-desc{
  width: 90%;
  margin:20rpx auto;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx 0;
}
.position-desc-box{
  width: 90%;
  margin: auto;
}
.position-desc-box-title{
  font-weight: 600;
  color: #707070;
  margin-bottom: 20rpx;
}
.position-desc-box-con{
  font-size: 26rpx;
  color: #707070;
}
.delivery-resume-box{
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #e7e7e7;
}
.delivery-resume{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: auto;
  height: 140rpx;
  line-height: 140rpx;
}
.delivery-resume-left{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.delivery-resume-right{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fe9d3d;
  height: 80rpx;
  line-height: 80rpx;
  width: 78%;
  border-radius: 10rpx;
}
.delivery-resume-left-img,.delivery-resume-right-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.delivery-resume-left-img > image,.delivery-resume-right-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
.delivery-resume-left-desc{
  font-size: 26rpx;
  color: #707070;
}
.delivery-resume-right-desc{
  color: #fff;
  font-size: 26rpx;
}



