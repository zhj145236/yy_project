<!--teacherVersion/teacherRecruitList/teacherRecruitList.wxml-->
<!-- 机构招聘 -->
<view class="condition-screen-con">
  <view class="condition-screen-con-box">
    <!-- 课类 -->
    <picker data-type="0" bindtap="teacherPresentClick" mode="multiSelector" custom-item="{{customItem}}" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{teacherMultiArray}}">
      <view class="condition-screen-con-box-one {{teacherSetType == 0?'active':''}}">
        <view class="condition-screen-con-box-one-con">薪资</view>
        <view class="condition-screen-con-box-one-img">
          <image src="{{teacherSetType == 0?'/image/downjtother.png':'/image/downjt.png'}}" />
        </view>
      </view>
    </picker>

    <!-- 教龄 -->
    <picker data-type="1" bindtap="teacherPresentClick" mode="region" value="{{region}}" custom-item="{{customItem}}" bindchange="regionBindchange">
      <view class="condition-screen-con-box-one {{teacherSetType == 1?'active':''}}">
        <view class="condition-screen-con-box-one-con">教龄</view>
        <view class="condition-screen-con-box-one-img">
          <image src="{{teacherSetType == 1?'/image/downjtother.png':'/image/downjt.png'}}" />
        </view>
      </view>
    </picker>

    <!-- 学历 -->
    <picker data-type="2" bindtap="teacherPresentClick" mode="selector" value="{{index}}" custom-item="{{customItem}}" bindchange="bindSelectorPickerChange" range="{{genderArray}}">
      <view class="condition-screen-con-box-one {{teacherSetType == 2?'active':''}}">
        <view class="condition-screen-con-box-one-con">学历</view>
        <view class="condition-screen-con-box-one-img">
          <image src="{{teacherSetType == 2?'/image/downjtother.png':'/image/downjt.png'}}" />
        </view>
      </view>
    </picker>

    <!-- 区域 -->
    <picker data-type="3" bindtap="teacherPresentClick" mode="multiSelector" value="{{courseIndex}}" custom-item="{{customItem}}" bindchange="courseBindChange" bindcolumnchange="bindMultiCourseColumnChange" range="{{courseMultiArray}}">
      <view class="condition-screen-con-box-one {{teacherSetType == 3?'active':''}}">
        <view class="condition-screen-con-box-one-con">区域</view>
        <view class="condition-screen-con-box-one-img">
          <image src="{{teacherSetType == 3?'/image/downjtother.png':'/image/downjt.png'}}" />
        </view>
      </view>
    </picker>
  </view>
</view>

<view class="diary-center">
  <view class="diary-center-box">
    <block wx:for="{{recruitInfo}}" wx:key="uni-recruit">
      <view class="recruit-con">
        <view class="recruit-con-img"><image mode="widthFix" src="{{item.recruitImg}}" /></view>
        <view class="recruit-con-des">
          <view class="recruit-con-des-type">
            <view class="recruit-con-des-type-title">{{item.mainTitle}}</view>
            <view class="recruit-con-des-type-msg">
              <view class="recruit-con-des-type-price">{{item.price}}</view>
              <block wx:for="{{item.recruitInfo}}" wx:key="uni-con" wx:for-item="itemRecruit">
                <view class="recruit-con-des-type-data">
                  <view class="recruit-con-des-type-data-img"><image src="{{itemRecruit.recruitIcon}}" /></view>
                  <view class="recruit-con-des-type-data-text">{{itemRecruit.recruitInfo}}</view>
                </view>
              </block>
            </view>
          </view>
          <view class="recruit-con-des-type-center">
            <view class="recruit-con-des-type-center-title">{{item.recruitCenterTitle}}</view>
            <view class="recruit-con-des-type-center-con">{{item.recruitCenterCon}}</view>
          </view>
          <view class="recruit-con-des-type-bom">
            <view class="recruit-con-des-type-bom-title">{{item.recruitBomTitle}}</view>
            <view class="recruit-con-des-type-bom-con">{{item.recruitBomCom}}</view>
          </view>
        </view>
      </view>
    </block>
  </view>
</view>

<!-- 平台信息 -->
