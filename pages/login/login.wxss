/* pages/login/login.wxss */
page{
  overflow: hidden;
}
.login-box{
  position: relative;
}
.login-box-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
.login-info{
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
}
.login-info-box{
  width: 90%;
  margin: 150rpx auto 0 auto;
}
.login-info-box-top-logo{
  width: 200rpx;
  height: 200rpx;
  margin: auto;
}
.login-info-box-top-logo > image{
  display: block;
  width: 100%;
  height: 100%;
}
.login-info-box-top-txt{
  text-align: center;
  color: #007bd0;
  font-size: 32rpx;
  text-shadow:2px 1px 0px #fff;
  font-weight: 600;
}
.login-info-box-center{
  background-color: rgba(255, 255, 255, 0.8);
  padding: 50rpx 0;
  border-radius: 10rpx;
  margin-top: 30rpx;
}
.login-info-box-center-box{
  width: 80%;
  margin: auto;
}
.login-info-inp{
  margin-bottom: 30rpx;
}
.login-info-inp-account{
  padding: 20rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.login-type-btn{
  margin: 0;
  position: static;
  border: none;
  line-height: normal;
}
button::after{
  border: none;
  width: 0;
  height: 0;
}
.mar-btm{
  margin-bottom: 10rpx;
}
.login-sub{
  background-color: #007bd0;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border:none;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}
.login-info-inp-remind{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  color: #707070;
  font-size: 26rpx;
}
.login-info-box-bottom-txt{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.login-info-box-bottom-txt{
  margin: 60rpx 0;
}
.login-info-box-bottom-txt-line{
  width: 210rpx;
  height: 1px;
  background-color: #707070;
}
.login-info-box-bottom-txt-center{
  color: #707070;
  font-size: 26rpx;
}
.login-info-box-bottom-icon{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.login-info-box-bottom-icon-wx{
  padding: 30rpx 20rpx;
  background-color: rgba(0, 123, 208, 0.6);
  border-radius: 10rpx;
}
.login-info-box-bottom-icon-wx-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  margin-right: 10rpx;
  margin: auto;
}
.login-info-box-bottom-icon-wx-img > image{
  display: block;
  width: 60%;
  height: 60%;
  margin: auto;
}
.login-info-box-bottom-icon-wx-txt{
  font-size: 26rpx;
  color: #fff;
  margin-top: 20rpx;
  text-align: center;
}
.verification-code{
  font-size: 26rpx;
  color: #707070;
  margin-left: 10rpx;
}
.verification-code-box{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.phone{
  margin-bottom: 10rpx;
}
.verification-code-box-inp{
  padding: 20rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  font-size: 26rpx;
  width: 340rpx;
}