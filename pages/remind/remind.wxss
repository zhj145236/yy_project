/* pages/remind/remind.wxss */
page{
  font-size: 30rpx;
  background-color: #f2f2f2;
  font-family:  Microsoft YaHei;
}
.policy-list-out{
  background-color: #fff;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}
.policy-list{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  width: 90%;
  margin: auto;
  padding: 40rpx 0;
}
.policy-datas-cont-title{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.policy-datas-cont-title > text{
  margin-right: 10px;
}
.policy-datas-cont-toview{
  font-size: 26rpx;
}
.my-sxtx{
  width: 100%;
  margin-top: 50rpx;
}
.my-sxtx > text{
  display: block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}
.no-read-policy{
  margin-right: 20rpx;
  color: #FF8000;
}























