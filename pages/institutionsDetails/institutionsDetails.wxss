/* pages/institutionsDetails/institutionsDetails.wxss */
page{
  font-size: 30rpx;
  background-color: #f2f2f2;
  font-family:  Microsoft YaHei;
  overflow-x: hidden;
}
.banner-box{
  width: 90%;
  overflow: hidden;
  border-radius: 10rpx;
}
.slide-image{
  width: 100%;
  display: block;
  height: 200rpx;
}
/* 平台核查 */
.platform-inspect{
  width: 90%;
  background-color: #fff;
  margin: 30rpx auto;
  border-radius: 10rpx;
  padding: 30rpx 0;
}
.condition-screen-top{
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:center;
  align-items:flex-start;
  margin: 0 auto;
}
.teacher-security-right{
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:flex-start;
  align-items:center;
  width: 460rpx;
}
.teacher-security{
  font-size: 26rpx;
  color: #007bd0;
  margin-right: 20rpx;
  width: 110rpx;
}
.teacher-security-box{
  color: #007bd0;
  font-size: 24rpx;
  display: flex;
  align-items:center;
  justify-content:center;
  flex-direction:row;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.teacher-security-box-img{
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.teacher-security-box-img > image{
  display: block;
  width: 100%;
  height: 100%;
}

/* 信息简介 */
.info-abstract{
  width: 90%;
  background-color: #fff;
  margin: 0 auto;
  padding: 30rpx 0;
  border-radius: 10rpx;
}
.info-abstract-box{
  width: 90%;
  margin: 0 auto;
  font-size: 26rpx;
}
.info-abstract-box-top{
  display: flex;
  justify-content:flex-start;
  align-items:flex-end;
  margin-bottom: 30rpx;
}
.info-abstract-box-top-message{
  font-size: 30rpx;
  font-weight: 600;
  color: #007bd0;
  margin-right: 10rpx;
}
.info-abstract-box-top-abstract{
  font-size: 26rpx;
  color:#cd2a17;
}
.info-abstract-box-info-data{
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}
.info-abstract-box-info-data-totle{
  color: #575757;
  margin-right: 10rpx;
}
.info-abstract-box-info-data-con{
  color: #a5a5a5;
}
.helpful-hints{
  font-size: 22rpx;
  color: #e19e9e;
}
/* 占位图 */
.placeholder-place-img{
  width: 100%;
  height: 170rpx;
  margin: 30rpx 0;
  overflow: hidden;
}
.placeholder-place-img > image{
  display: block;
  width: 100%;
  height: 100%;
}

/* 产品中心 */
.near-teacher-out{
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx 0;
}
.near-teacher-title{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  width: 90%;
  margin:0 auto 20rpx auto;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #c7c7c7;
}
.near-teacher-title-left-text,.near-teacher-title-left,.near-teacher-title-right{
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
}
.near{
  font-size: 30rpx;
  font-weight: 600;
  color: #007bd0;
  margin-right: 10rpx;
}
.teacher{
  font-size: 26rpx;
  color: #cd2a17;
}
.near-teacher-title-right-img{
  width: 38rpx;
  height: 38rpx;
  margin-left: 10rpx;
}
.near-teacher-title-right-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
.near-teacher-title-right-more{
  color: #a3a3a3;
  font-size: 28rpx;
}


.institution-view{
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:space-between;
  align-items:center;
  width: 90%;
  margin:auto;
}
.institution{
  width: 48%;
  margin-top: 3%;
  background-color: #f2f2f2;
  border-radius: 10rpx;
  overflow: hidden;
}
.institution-con-style{
  margin-bottom: 10rpx;
}
.institution-img{
  width: 100%;
  height: 180rpx;
  overflow:hidden;
}
.institution-img > image{
  display: block;
  width: 100%;
}
.institution-con{
  width: 90%;
  margin: auto;
  color: #565656;
  font-size: 26rpx;
  padding: 20rpx 0;
}
