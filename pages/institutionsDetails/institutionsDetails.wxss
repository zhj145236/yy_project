.change-style{
  font-weight: 600;
}
.price{
  color: #cd2a17;
}
.institution-more{
  font-size: 30rpx;
}

/* 资质证书 */
.certification{
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.certification > image{
  display: block;
  width: 100%;
  height: 100%;
}
.certificate{
  width:100%;
  margin-bottom: 30rpx;
}
.certificate > image{
  display: block;
  width:100%;
  height: 100%;
}

/* 人生格言 */
.other-style{
  align-items:flex-start;
}
.change-style{
  width: 210rpx;
}
.change-width{
  line-height: 50rpx;
}

/* 给他/她留言 */
.leave-word-box{
  width: 100%;
  margin: 0 auto 30rpx auto;
  background-color: #f6f6f6;
  border-radius: 10rpx;
  padding-top: 30rpx;
}
.leave-word{
  width: 90%;
  margin: 0 auto;
  /* text-indent:30rpx */
}
.leave-word-btn-box{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1px solid #e5e5e5;
  text-align: right;
  display: flex;
  justify-content:flex-end;
  flex-direction:row-reverse;
  align-items: center;
}
.leave-word-btn{
  display: block;
  border: none;
  background-color: #e5e5e5;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 0;
  position: static;
  margin-right: 10rpx;
  border-radius: 0;
  color: #979797;
}
.pad-btn{
  padding-bottom: 30rpx;
}
.leave-word-box-info{
  width: 90%;
  margin:auto;
}
.leave-word-info-name{
  color: #cd2a17;
  margin-bottom: 20rpx;
}
.leave-word-info-con{
  color:#414141;
}
.leave-word-info-name-parents{
  color: #007bd0;
}
.leave-word-info-name-symbol{
  color: #2c2c2c;
}
button::after{
  border: none;
  width: 0;
  height: 0;
  position: static;
}

/* 回复框 */
.reply-info{
  background: #e7e7e7;
  padding: 20rpx 0;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.reply-send-con{
  width: 90%;
  background: #ffffff;
  margin: auto;
}
.reply-send-con > textarea{
  padding: 12rpx 0;
}

/* 底部总部信息 */
.platform-info{
  font-size: 24rpx;
  font-weight: 600;
  color: #adadad;
  width:56%;
  margin: 100rpx auto 0 auto;
}
.platform-info > view{
  height: 40rpx;
  line-height: 40rpx;
}

/* 底部占位 */
.position-bottom{
  width: 100%;
  height: 100rpx;
}