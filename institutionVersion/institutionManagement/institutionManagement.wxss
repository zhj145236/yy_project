/* institutionVersion/institutionManagement/institutionManagement.wxss */
page{
  font-size: 30rpx;
  background-color: #f2f2f2;
  font-family:  Microsoft YaHei;
}
/* 顶部 */
.registered{
  width: 90%;
  margin: 30rpx auto;
  padding: 30rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
}
.registered-txt{
  width: 90%;
  margin: 0 auto;
  color: #69a5fb;
  font-weight: 600;
  text-align: left;
}

/* 优惠券使用情况 */
.coupons-use-situation{
  width: 90%;
  border-radius: 10rpx;
  background: #fff;
  margin: 20rpx auto;
  padding:40rpx 0;
}
.coupons-use-situation-box{
  width: 90%;
  margin: auto;
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:space-between;
  align-items: center;
  color: #707070;
  font-size: 28rpx;
}
.coupons-use-situation-stay>text,.coupons-use-situation-has>text,.coupons-use-situation-overdue>text{
  margin-left: 10rpx;
}
.active{
  color: #69a5fb;
}
/* 优惠券 */
.coupons-details{
  width: 90%;
  background: #fff;
  border-radius: 10rpx;
  border-top: 8rpx solod #4EB9FF;
  margin: 0 auto 30rpx auto;
  padding: 30rpx 0;
  box-shadow: 2px 4px 6px #d2d2d2;
}
.coupons-details-box{
  width: 90%;
  margin: auto;
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:space-between;
  align-items: center;
}
.coupons-details-left{
  width: 120rpx;
  text-align: center;
}
.coupons-details-left-top-digital{
  font-size: 60rpx;
  font-weight: 600;
  color: #4EB9FF;
}
.coupons-details-left-down{
  font-size: 28rpx;
  color: #4EB9FF;
}
.coupons-details-right{
  width: 460rpx;
}
.coupons-details-right-header{
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:flex-start;
  align-items: center;
}
.coupons-details-right-header-icon{
  width: 50rpx;
  height: 50rpx;
}
.coupons-details-right-header-icon > image{
  display: block;
  width: 100%;
  height: 100%;
}
.coupons-details-right-header-text{
  color: #707070;
  margin-left: 10rpx;
}
.coupons-details-right-con{
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:space-between;
  align-items: center;
  border-bottom: 2rpx dashed #a4a4a4;
  padding: 30rpx 0;
}
.coupons-details-right-con-period-validity{
  font-size: 26rpx;
  color: #a4a4a4;
}
.coupons-details-right-con-use{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  border-radius: 100rpx;
  background: #4EB9FF;
  color: #fff;
  text-align: center;
}
.coupons-details-right-info{
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:space-between;
  align-items: center;
  padding: 20rpx 0;
}
.coupons-details-right-info-text{
  font-size: 28rpx;
  color: #a4a4a4;
}
.coupons-details-right-icon{
  width: 35rpx;
  height: 35rpx;
}
.coupons-details-right-icon > image{
  width: 100%;
  height: 100%;
  display: block;
}
/* 基本内容 */
.basic-content{
  padding: 20rpx 0;
  border-top: 1px solid #d2d2d2;
  color: #a4a4a4;
  font-size: 26rpx;
  width: 90%;
  margin:20rpx auto 0 auto;
}
.basic-name,.basic-area,.basic-grade,.basic-quality{
  height: 40rpx;
  line-height: 40rpx;
}