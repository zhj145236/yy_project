/* pages/map/map.wxss */
.map-add{
  background-color: #ffffff;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 40rpx 0;
  border-top: 1px solid #ddd;
  z-index: 10000;
}
.new-box{
  width: 90%;
  margin: auto;
}
.call-tel{
  color: #cd2a17;
}
.map-add-name,.map-add-info,.map-add-sex{
  font-size: 26rpx;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
}
.map-add-info{
  font-size: 28rpx;
}
.map-add-sex-img{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.map-add-sex-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
.map-add-sex{
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items: center;
}
.new-box-width{
  display: flex;
  align-items: center;
  justify-content:space-between;
  flex-direction:row;
  width:90%;
  margin: 0 auto;
}
.new-box-right{
  display: flex;
  align-items: center;
  justify-content:center;
  width: 80rpx;
  height: 200rpx;
  background-color: #f7f7f7;
  border-radius: 10rpx;
}
.new-box-right-img{
  width: 40rpx;
  height: 40rpx;
}
.new-box-right-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
.chose-position-img{
  width: 60rpx;
  height: 60rpx;
  margin:auto;
}
.chose-position-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
.choole-add-text{
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgba(0, 0, 0, 0.5);
  margin-top: 4px;
  border-radius: 10rpx;
}
.chose-add{
  position: fixed;
  top: 40%;
  left: 50%;
  margin-top: -50rpx;
  margin-left: -100rpx;
  width: 200rpx;
}
.current-postion{
  width: 80rpx;
  background-color: rgba(0, 0, 0, 0.6);
  position: fixed;
  right: 30rpx;
  top: 30rpx;
  padding: 24rpx 0;
  border-radius: 10rpx;
}
.position-img{
  width: 50rpx;
  height: 50rpx;
  margin: auto;
  display: block;
}
.choole-add{
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  margin-top: 10rpx;
}
.new-box-name,.map-add-name{
  font-size: 30rpx;
  font-weight: 600;
  color: #707070;
}
.new-box-info{
  font-size: 26rpx;
  color: #707070;
  margin: 10rpx 0;
}
.new-box-info > .map-add-sex-img{
  width: 50rpx;
  height: 50rpx;
}