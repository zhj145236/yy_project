/* parentsVersion/parentsinstAdvice/parentsinstAdvice.wxss */
page{
  font-size: 30rpx;
  background-color: #f2f2f2;
  font-family:  Microsoft YaHei;
  overflow-x: hidden;
}
/* 顶部 */
.registered{
  width: 90%;
  margin: 30rpx auto;
  padding: 30rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
}
.registered-txt{
  width: 90%;
  margin: 0 auto;
  color: #F2B04A;
  font-weight: 600;
  text-align: left;
}

.product-details{
  width: 90%;
  margin: 0 auto 30rpx auto;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 0;
}
.course-info-box{
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  align-items: center;
  justify-content:flex-start;
  margin: auto;
  width: 90%;
}
.course-info-outside{
  border-bottom: 1px solid #e7e7e7;
  padding: 20rpx 0;
}
.course-info-box-img{
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(242, 176, 74, 0.3);
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  margin-right: 10rpx;
}
.course-info-box-img > image{
  display: block;
  width: 60%;
  height: 60%;
  margin: auto;
}
.course-info-box-inp{
  /* border: 1px solid #e7e7e7; */
  border-radius: 10rpx;
  font-size: 26rpx;
  padding: 16rpx 0;
  width: 400rpx;
}

.course-info-box-inp > input{
  width: 360rpx;
  margin: auto;
}
.textarea-box{
  align-items: flex-start;
}
.textarea-inp{
  background-color: #f4f4f4;
  border-radius: 10rpx;
  width: 530rpx;
}
.textarea-inp > textarea{
  width: 90%;
  margin: auto;
}
.submit-registered{
  border: none;
  background: #4EB9FF;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin:30rpx auto;
  width: 90%;
}
.remove-bottom{
  border-bottom: none;
}
.instructions{
  width: 90%;
  margin: 0 auto;
  font-size: 24rpx;
  padding: 20rpx 0;
  color: #e19e9e;
  background: #fff;
  border-radius: 10rpx;
  height: 124rpx;
}
.instructions-con{
  width:90%;
  margin: 0 auto;
  height: 40rpx;
  line-height: 40rpx;
}

/* 底部总部信息 */
.platform-info{
  font-size: 24rpx;
  font-weight: 600;
  color: #adadad;
  width:56%;
  margin: 100rpx auto 0 auto;
}
.platform-info > view{
  height: 40rpx;
  line-height: 40rpx;
}

/* 底部占位 */
.position-bottom{
  width: 100%;
  height: 100rpx;
}