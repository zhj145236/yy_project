/* 底部总部信息 */
.platform-info{
  font-size: 24rpx;
  font-weight: 600;
  color: #adadad;
  width:56%;
  margin: 100rpx auto 0 auto;
}
.platform-info > view{
  height: 40rpx;
  line-height: 40rpx;
}
/* 课程预约 */
.apply-for-course{
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  border-top: 1px solid #e7e7e7;
}
.order-course{
  text-align: center;
  height:80rpx;
  line-height:80rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  width: 40%;
  border-radius:10rpx;
}
.order-course{
  background-color: #cd2a17;
}
.call-tel{
  border-right: 1px solid #b8b8b8;
  padding-right: 34rpx;
}
.call-tel,.collection-course{
  display: flex;
  flex-direction:row;
  flex-flow:nowrap;
  justify-content:flex-start;
  align-items:center;
}
.call-tel-img,.collection-course-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.call-tel-img > image,.collection-course-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
.call-tel-text,.collection-course-img-text{
  font-size: 26rpx;
  color: #707070;
}

