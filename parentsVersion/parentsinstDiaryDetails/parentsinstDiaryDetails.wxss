/* parentsVersion/parentsinstDiaryDetails/parentsinstDiaryDetails.wxss */
page{
  font-size: 30rpx;
  background-color: #f2f2f2;
  font-family:  Microsoft YaHei;
}
/* 顶部 */
.registered{
  width: 90%;
  margin: 30rpx auto;
  padding: 30rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
}
.registered-txt{
  width: 90%;
  margin: 0 auto;
  color: #F2B04A;
  font-weight: 600;
  text-align: left;
}

/* 心情 */
.diary-box{
  width: 90%;
  margin: 0 auto 20rpx auto;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  padding: 20rpx 0;
}
.diary-box-con{
  width: 90%;
  margin: auto;
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
}
.diary-box-con-img{
  width: 60rpx;
  height: 60rpx;
}
.diary-box-con-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
.diary-box-con-txt{
  font-size: 24rpx;
  color: #292929;
  margin-left: 20rpx;
}
.course-info-box-inp{
  background-color:#f4f4f4;
  border-radius:10rpx;
  width: 100%;
  margin: auto;
  font-size:26rpx;
  padding: 16rpx 0;
}
.course-info-box-inp > textarea{
  width: 90%;
  margin: auto;
}
/* 图片 */
.product-details-img-upload-box-external{
  width: 90%;
  padding: 20rpx 0;
  margin: auto;
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:flex-start;
  align-items: center;
}
.product-details-img-upload-box{
 width: 200rpx; 
 margin-bottom: 16rpx;
}
.product-details-img-upload-place-img{
  width: 186rpx;
  height: 280rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  margin: auto;
}
.mask-layer{
  background-color: rgba(0, 0, 0, 0.4);
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
}
.mask-layer-img{
  width: 60rpx;
  height: 60rpx;
  margin: auto;
}
.mask-layer-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
.deal-img{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  border-radius: 100rpx;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  overflow: hidden;
}
.deal-img > image{
  display: block;
  width: 100%;
  height: 100%;
  margin: auto;
}
/* 视频 */
.banner-swiper{
  height: 380rpx;
}
.banner-swiper-video{
  width:100%;
  margin: 30rpx auto 0 auto;
  height: 380rpx;
}
.banner-video{
  width:190rpx;
  height: 380rpx;
  margin-left: 40rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
}
.set-mc{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0);
  display: flex;
  align-items: center;
}
.set-mc-img{
  width: 80rpx;
  height: 80rpx;
  margin: auto;
}
.set-mc-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
.duration-txt{
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  color: #fff;
  font-size: 28rpx;
}
.myVideo{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.deal-diary{
  width: 90%;
  margin: 30rpx auto;
  background-color: #f2b04a;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
}
